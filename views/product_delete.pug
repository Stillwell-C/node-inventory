extends layout

block content
  h1 Delete #{product.title}

  img(src=product.thumbnail alt='product thumbnail' style='width:auto; height:250px;')

  p #[strong Do you really want to delete this product?]
  p #[strong Please enter admin password to proceed.]

  form(method='POST' action='')
    input#productid(type='hidden',name='productid', required='true', value=product._id )
    input#adminpass(type='password', name='adminpass', required='true', placeholder='Admin Password' autocomplete='off')
    div
      button(type='submit') Delete
