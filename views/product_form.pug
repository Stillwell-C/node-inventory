extends layout

block content
  h1=title

  form(method='POST' action='')
    div
      label(for='product_title') Product Title:
      input#product_title(type='text' placeholder='Product title' name='product_title' required='true' value=(undefined===product ? '' : product.title) )
    div
      label(for='product_description') Product Description:
      input#product_description(type='text' placeholder='Product description' name='product_description' required='true' value=(undefined===product ? '' : product.description) )
    div
      label(for='product_price') Product Price:
      input#product_price(type='number' step=".01" placeholder='Product price' name='product_price' required='true' value=(undefined===product ? '' : product.price) )
    div
      label(for='product_discount') Product Discount Percentage:
      input#product_discount(type='number' placeholder='Product discount percentage' name='product_discount' required='true' step=".01" value=(undefined===product ? '' : product.discountPercentage) )
    div
      label(for='product_rating') Product Rating:
      input#product_rating(type='number' step=".01" placeholder='Product rating' name='product_rating' required='true' value=(undefined===product ? '' : product.rating) )
    div
      label(for='product_stock') Product Stock:
      input#product_stock(type='number' placeholder='Product stock' name='product_stock' required='true' value=(undefined===product ? '' : product.stock) )
    div
      label(for='product_brand') Product Brand:
      input#product_brand(type='text' placeholder='Product brand' name='product_brand' required='true' value=(undefined===product ? '' : product.brand) )
    div
      label(for='product_category') Product category:
      select#product_category(type='select' name='product_category' required='true' )
       option(value='smartphones' selected=(!product ? false: product.category === 'smartphones' ? true : false)) Smartphone
       option(value='laptops' selected=(!product ? false: product.category === 'laptops' ? true : false)) Laptop
       option(value='fragrances' selected=(!product ? false: product.category === 'fragrances' ? true : false)) Fragrance
       option(value='skincare' selected=(!product ? false: product.category === 'skincare' ? true : false)) Skincare
       option(value='groceries' selected=(!product ? false: product.category === 'groceries' ? true : false)) Groceries
       option(value='home-decoration' selected=(!product ? false: product.category === 'home-decoration' ? true : false)) Home Decoration
    div
      label(for='product_thumbnail') Product thumbnail:
      input#product_thumbnail(type='text' placeholder='Product thumbnail' required=false name='product_thumbnail' value=(undefined===product ? '' : product.thumbnail) )
    div
      label(for='product_images') Product images:
      div
        textarea#product_images(name="product_images", placeholder='Enter product images', required=false, cols="30", rows="20") #{undefined===product ? '' : product.imageLinks}
        p Include as many links as desired. Separate individual links with a single comma.
    if password
      p #[strong Please enter admin password to proceed.]
      input#adminpass(type='password', name='adminpass', required='true', placeholder='Admin Password' autocomplete='off')
    div
    button(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg